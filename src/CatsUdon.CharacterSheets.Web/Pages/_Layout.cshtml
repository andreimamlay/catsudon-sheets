<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-white">
        <div class="flex justify-between content-center bg-stone-100 h-12 px-4">
            <div class="self-center">CatsUdon - キャラシート</div>
            <div class="self-center">version: @ViewBag.CommitHash</div>
        </div>
        <div class="flex justify-center h-full">
            @RenderBody()
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
