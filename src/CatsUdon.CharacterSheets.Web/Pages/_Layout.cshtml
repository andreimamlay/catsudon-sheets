<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
    @if (string.IsNullOrWhiteSpace(ViewBag.Title)) 
    {
        <title>CatsUdonキャラシート</title>
    } 
    else
    {
        <title>@ViewBag.Title - CatsUdonキャラシート</title>
    }
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="bg-white">
        <div class="flex justify-between content-center bg-stone-100 h-12 px-4">
            <div class="self-center">CatsUdon キャラシート ・ <a class="text-blue-400" href="/">キャラシート変換</a> ・ <a class="text-blue-400" href="/systems">システム一覧</a></div>
            <div class="self-center">version: @ViewBag.CommitHash</div>
        </div>
        <div class="flex justify-center h-full">
            @RenderBody()
        </div>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
