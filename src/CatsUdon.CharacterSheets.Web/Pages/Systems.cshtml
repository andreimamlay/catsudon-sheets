@page
@model CatsUdon.CharacterSheets.Web.Pages.SystemsModel
@{
}
<div class="flex flex-col gap-4 mt-4 w-full xl:w-6xl ">
    <h2 class="ml-4 text-2xl">サポートしているシステム一覧</h2>
    @foreach (var group in Model.SupportedSystems)
    {
        <div class="p-4 bg-stone-50 flex flex-col gap-4">
            <h2><a class="text-blue-400" target="_blank" href="@group.Key.homepageUrl">@group.Key.providerName</a></h2>
            <ul>
                @foreach (var system in group) {
                    <li>
                        @system.GameSystemName ・
                        <a class="text-blue-400" target="_blank" href="@system.MainPageUrl">ホームページ</a> ・
                        <a class="text-blue-400" target="_blank" href="@system.CharacterCreationUrl">キャラ作成</a>
                    </li>
                }
            </ul>
        </div>
    }
</div>
